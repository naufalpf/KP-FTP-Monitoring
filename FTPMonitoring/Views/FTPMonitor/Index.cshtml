@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section style
{
    <style type="text/css">
        .content-wrapper {
            margin-left: 0px;
        }
        
        .modal {
            text-align: center;
        }

        @@media screen and (min-width: 768px) {
            .modal:before {
                display: inline-block;
                vertical-align: middle;
                content: " ";
                height: 100%;
            }
        }

        .modal-dialog {
            display: inline-block;
            text-align: left;
            vertical-align: middle;
        }

        .fa {
            cursor: pointer;
        }

        .row-centered {
            text-align:center;
        }

        .col-centered {
            float: none;
            margin: 0 auto;
        }

        .pt-5 {
            padding-top: 5px;
        }

        th.dt-center, td.dt-center {
            text-align: center;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Monitoring Perpindahan Data
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="/FTPMonitor/Index"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @RenderPage("Data_Bei.cshtml")
                @RenderPage("Data_Ksei.cshtml")
                @RenderPage("Data_Kpei.cshtml")
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@RenderPage("History_Modal.cshtml")
@RenderPage("History_Timeline_Modal.cshtml")
@RenderPage("Monitoring_Log_Detail_Modal.cshtml")

@section Script
{
    <script type="text/javascript" src="~/Scripts/ftp-monitoring.js"></script>
    <script type="text/javascript" src="~/Scripts/history-ftp.js"></script>
}
