
<div class="modal fade" id="MonitoringConfigurationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="modalTitle">Formulir Penambahan Data Konfigurasi Monitoring</h4>
            </div>
            <div class="modal-body">
                <div id="errorMessage"></div>
                <form id="MonitoringConfigurationForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="id">ID Konfigurasi Monitoring</label>
                        <input type="text" class="form-control" id="id" placeholder="ID Konfigurasi Monitoring" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="statusSelector">Nama Status</label>
                        <select id="statusSelector" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="pathSelector">Path Yang Dimonitoring</label>
                        <select id="pathSelector" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="batchFileSelector">Path Batch File Yang Digunakan</label>
                        <select id="batchFileSelector" class="form-control">
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" id="btnAdd" onclick="addMonitoringConfiguration();">Tambah</a>
                <a class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="updateMonitoringConfiguration();">Perbarui</a>
                <a class="btn btn-danger" id="btnDelete" style="display:none;" onclick="deleteMonitoringConfiguration();">Hapus</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>
