
<div class="modal fade" id="MasterSROModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="modalTitle">Formulir Penambahan Data Master SRO</h4>
            </div>
            <div class="modal-body">
                <div id="errorMessage"></div>
                <form id="MasterSROForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="id">ID SRO</label>
                        <input type="text" class="form-control" id="id" placeholder="ID SRO" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="name">Nama SRO</label>
                        <input type="text" class="form-control" id="name" placeholder="Nama SRO" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" id="btnAdd" onclick="addMasterSRO();">Tambah</a>
                <a class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="updateMasterSRO();">Perbarui</a>
                <a class="btn btn-danger" id="btnDelete" style="display:none;" onclick="deleteMasterSRO();">Hapus</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>
